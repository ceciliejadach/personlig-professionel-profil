---
import DBA from "../assets/images/dba-redesign.png";
---

<div class="card-wrapper">
  <div class="card">
    <img src={DBA.src} alt="" />
    <div class="content">
      <h1>DBA - Redesign</h1>
      <ul>
        <li>&#8594 Deveopler</li>
      </ul>
      <p><strong>LÃ¸sning:</strong> <a href="https://dba-redesign.netlify.app/">DBA Redesign</a></p>
    </div>
  </div>
</div>

<style>
  @layer components {
    ul {
      padding: 0;
      li {
        list-style: none;
        font-size: 1.15rem;
      }
    }
    img {
      border-radius: 10px;
      box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    }

    .card-wrapper {
      container-type: inline-size;
      padding-block: 2rem;
      /* grid-column: full; */
    }

    .content {
      display: grid;
      align-self: start;
    }

    .card:has(img) {
      display: grid;
      gap: 1rem;

      @container (width > 600px) {
        grid-template-columns: 3fr 1fr;

        .card-wrapper {
          display: grid;
        }
      }
    }

    a {
      text-decoration: none;
      color: var(--blue);
      padding-right: 30px;
      position: relative;

      &::after {
        content: "";
        position: absolute;
        height: 0.7px;
        background: var(--blue);
        left: 0;
        bottom: 0;
        width: 0;
        transition: width 0.2s;
      }

      &:hover:after {
        width: 80%;
      }
    }

    @media (width > 600px) {
      .card-wrapper {
        padding-block: 8rem;
      }

      .content {
        gap: 1rem;
      }

      .card:has(img) {
        gap: 3rem;
      }
    }
  }
</style>
