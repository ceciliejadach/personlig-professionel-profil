---
import { Icon } from "astro-icon/components";
import Portraet from "../assets/images/portraet.png";
---

<section>
  <h1 class="text">Er vi et match?</h1>
  <div class="content">
    <img src={Portraet.src} alt="" />
    <div>
      <h2>E-mail: Jadach95@hotmail.com</h2>
      <div class="flex">
        <a href="https://github.com/ceciliejadach"><Icon name="github_wh" /></a>
        <a href="https://www.linkedin.com/in/cecilie-jadach-petersen-0671b7276/"><Icon name="linkedin_wh" /></a>
      </div>
    </div>
  </div>
</section>

<style>
  [data-icon] {
    width: 30px;
    height: 30px;

    & {
      fill: var(--white);
    }
  }
  @layer components {
    section {
      gap: 1rem;

      & > div {
        grid-column: full;
        padding: 6rem 1rem;
        background-color: var(--blue);

        img {
          max-width: 200px;
          border-radius: 100%;
          aspect-ratio: 1;
          object-fit: cover;
        }

        .flex {
          display: flex;
        }
      }
    }
    h1 {
      padding-block: 10rem;
      text-align: center;
    }

    div {
      grid-column: content;

      h2 {
        color: var(--white);
      }
    }
  }
</style>

