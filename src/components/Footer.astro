<style>
  [data-icon] {
    width: 50px;
    height: 50px;

    & {
      fill: var(--white);
    }
  }
  @layer components {
    section {
      gap: 1rem;

      & > div {
        display: grid;
        gap: 3rem;
        grid-column: full;
        padding: 6rem 1rem;
        background-color: var(--blue);
        place-content: center;
      }
    }
    h1 {
      padding-block: 10rem;
      text-align: center;
    }

    div {
      grid-column: content;

      h2 {
        color: var(--white);
      }

      & > div {
        display: flex;
        justify-self: center;
        gap: 1rem;
      }
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  let mm = gsap.matchMedia();

  gsap.to(".text", {
    scrollTrigger: {
      trigger: ".text",
      start: "top center",
      end: "+=300",

      toggleActions: "restart pause reverse reverse",
      scrub: 1,
    },
    scale: 2,
    ease: "power2",
    // duration: 20,
  });
</script>
