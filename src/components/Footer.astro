---
import { Icon } from "astro-icon/components";
import Portraet from "../assets/images/portraet.png";
---

<section>
  <div class="content">
    <img src={Portraet.src} alt="" />
    <div>
      <h2><strong> Kontakt mig</strong></h2>
      <h2>E-mail: Jadach95@hotmail.com</h2>
      <div class="flex">
        <a href="https://github.com/ceciliejadach"><Icon name="github_wh" /></a>
        <a href="https://www.linkedin.com/in/cecilie-jadach-petersen-0671b7276/"><Icon name="linkedin_wh" /></a>
      </div>
    </div>
  </div>
</section>

<style>
  [data-icon] {
    width: 30px;
    height: 30px;

    & {
      fill: var(--white);
    }
  }
  @layer components {
    section {
      background-color: var(--blue);
      padding: 6rem 1rem;
      border-radius: 20px 20px 0 0;
    }
    .content {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 2rem;

      & > div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
      }
    }

    img {
      max-width: 200px;
      border-radius: 100%;
      aspect-ratio: 1;
      object-fit: cover;
    }

    .flex {
      display: flex;
      gap: 1rem;
    }

    h2 {
      color: var(--white);
    }
    .text {
      padding-block: 10rem;
      text-align: center;
    }

    div {
      grid-column: content;
    }
  }
</style>
