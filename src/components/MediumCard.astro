---
import ITMV from "../assets/images/itmv.png";

const { text, link, paragraph } = Astro.props;
---

<div class="container">
  <div class="card-wrapper">
    <div class="card">
      <figure>
        <img src={ITMV.src} alt="" />
      </figure>
      <div class="content">
        <h1>{text}</h1>
        <div>
          <ul>
            <li>&#8594 Developer</li>
            <li>&#8594 Digital Designer</li>
            <li>&#8594 Illustrator</li>
          </ul>
        </div>
        <p><strong>LÃ¸sning:</strong> <a href={link}>{paragraph}</a></p>
      </div>
    </div>
  </div>

  <style>
    @layer components {
      ul {
        padding: 0;
        li {
          list-style: none;
        }
      }
      img {
        border-radius: 10px;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
      }
      .container {
        padding-block: 2rem;

      }
      .card-wrapper {
        container-type: inline-size;
        /* padding-block: 4rem; */
        grid-column: full;
      }

      .content {
        display: grid;
        gap: 1rem;
        align-self: start;

        div {
          display: flex;
          flex-wrap: wrap;
          gap: 1rem;
        }
      }

      /* figure {
     

    
        } */
      }

      .card:has(img) {
        display: grid;
        gap: 1rem;

        @container (width > 600px) {
          grid-template-columns: 1fr 3fr;

          .card-wrapper {
            display: grid;
          }

          .content {
            order: -1;
          }
        }
      }

      a {
        text-decoration: none;
        color: var(--blue);
        padding-right: 30px;
        position: relative;

        &::after {
          content: "";
          position: absolute;
          height: 0.7px;
          background: var(--blue);
          left: 0;
          bottom: 0;
          width: 0;
          transition: width 0.2s;
        }

        &:hover:after {
          width: 100%;
        }
      }

      @media (width > 500px) {
        figure {
          &::before {
            bottom: -5%;
          }
        }

        .container {
          padding-block: 8rem;
        }

        .card:has(img) {
          gap: 3rem;
        }
      }
    }
  </style>
</div>
