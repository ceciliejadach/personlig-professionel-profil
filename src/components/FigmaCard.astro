---
import ImgOne from "../assets/images/img-1.png";
import ImgTwo from "../assets/images/img-2.png";
---

<div class="container">
  <div class="card-wrapper">
    <div class="card">
      <div class="content">
        <h1>Implementering af Figma Design</h1>
        <div>
          <ul>
            <li>&#8594 Developer</li>
          </ul>
        </div>
        <p><strong>LÃ¸sning:</strong> <a href="https://implementer-et-figma-design.netlify.app/">Implementering af Figma Design</a></p>
      </div>
      <figure>
        <img src={ImgOne.src} alt="" />
        <img src={ImgTwo.src} alt="" />
      </figure>
    </div>
  </div>

  <style>
    @layer components {
      ul {
        padding: 0;
        li {
          list-style: none;
          font-size: 1.15rem;
        }
      }
      img {
        border-radius: 10px;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
      }
      .container {
        padding-block: 3rem;
      }
      .card-wrapper {
        container-type: inline-size;
        /* padding-block: 4rem; */
        grid-column: full;
      }

      .content {
        display: grid;
        align-self: start;

        div {
          display: flex;
          flex-wrap: wrap;
          gap: 1rem;
        }
      }

      figure {
        display: grid;
        gap: 1rem;
      }
    }

    .card:has(img) {
      display: grid;
      gap: 1rem;

      @container (width > 800px) {
        grid-template-columns: 3fr 1fr;

        .card-wrapper {
          display: grid;
        }

        .content {
          order: 1;
        }
      }
    }

    a {
      text-decoration: none;
      color: var(--blue);
      padding-right: 30px;
      position: relative;

      &::after {
        content: "";
        position: absolute;
        height: 0.7px;
        background: var(--blue);
        left: 0;
        bottom: 0;
        width: 0;
        transition: width 0.2s;
      }

      &:hover:after {
        width: 100%;
      }
    }

    @media (width > 500px) {
      figure {
        &::before {
          bottom: -5%;
        }
      }
      .content {
        gap: 1rem;
      }
      .container {
        padding-block: 6rem;
      }

      .card:has(img) {
        gap: 3rem;
      }
    }
  </style>
</div>
