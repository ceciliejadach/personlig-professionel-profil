<style>
  @layer components {
    .card {
      :has(> &) {
        display: grid;
        grid: auto;
        gap: 2rem;
        overflow-x: clip;
      }

      width: min(300px, 100%);
      aspect-ratio: 0.75;
      border-radius: 8px;
      background: red;
      animation: --move linear both;
      animation-timeline: view();
      margin-top: -15%;
    }

    @keyframes --move {
      from {
        translate: 120vw;
        rotate: z 12deg;
        scale: 0.6;
      }

      50% {
        translate: calc(50vw - 50%);
      }

      40%,
      60% {
        rotate: z 0deg;
        scale: 1;
      }

      to {
        translate: calc(-20vw - 100%);
        rotate: z -12deg;
        scale: 0.6;
      }
    }

    body {
      /* display: flow-root;
      min-height: 100svh;
